{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "../../../dist/out-tsc",
    "types": [
      "node"
    ]
  },
  "files": [],
  "include": [
    "src/**/*.ts",
    "types/global.d.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}